<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="98dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:text="Details:"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_cover"
        android:layout_margin="200dp"
        android:padding="40dp"
        android:text="I am a App Developer, and I'm very passionate and dedicated to my work as a fresh Web Developer, I have acquired the skills and knowledge necessary to make your project a success I enjoy every step of the design process, from discussion and collaboration."
        android:textSize="15dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="95dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="237dp"
        android:layout_height="226dp"
        app:srcCompat="@drawable/map"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="310dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="56dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/fb"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="675dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="56dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/insta"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="675dp" />


</androidx.constraintlayout.widget.ConstraintLayout>